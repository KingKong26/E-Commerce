<section>
    <div class="container mt-3">
        <div class="row mb-5">
            {{#each products}}
            <div class="col-md-3 mt-4 " style="padding: 0;">
                <div class="card" style="width: 15rem; height:400px">
                    <img src="/product-images/{{this.product._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.product.Name}}</h5>
                        <p class="card-text">Price: Rs.{{this.product.Price}}/-</p>
                        <p class="card-text">Quantity: {{this.quantity}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>