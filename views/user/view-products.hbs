<section>
    <div class="container mt-3">
        <div class="row mb-5">
            {{#each products}}
            <div class="col-md-3 mt-4 " style="padding: 0;">
                <div class="card " style="width: 15rem; height:482px">
                    <img src="/product-images/{{this._id}}.jpg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{this.Name}}</h5>
                        <p class="card-text">{{this.Description}}</p>
                        <p class="card-text">Price: Rs.{{this.Price}}/-</p>
                        <button class="btn btn-primary" onclick="addToCart('{{this._id}}')">Add to cart</button>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

